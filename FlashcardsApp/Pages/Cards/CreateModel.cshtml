@page
@model FlashcardsApp.Pages.Cards.CreateModel

<h2>Create</h2>

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Card.Question" class="control-label"></label>
                <input asp-for="Card.Question" class="form-control" />
                <span asp-validation-for="Card.Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.Answer" class="control-label"></label>
                <input asp-for="Card.Answer" class="form-control" />
                <span asp-validation-for="Card.Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.Image" class="control-label"></label>
                <input asp-for="Card.Image" class="form-control-file" type="file" />
                <span asp-validation-for="Card.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
