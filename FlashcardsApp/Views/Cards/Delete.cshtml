@model FlashcardsApp.Domain.Entities.Card

@{
    ViewData["Title"] = "Delete Card";
}

<h1>Delete Card</h1>

<h3>Are you sure you want to delete this card?</h3>
<div>
    <h4>Card</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Question
        </dt>
        <dd class="col-sm-10">
            @Model.Question
        </dd>
        <dt class="col-sm-2">
            Answer
        </dt>
        <dd class="col-sm-10">
            @Model.Answer
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Decks" asp-route-id="@Model.DeckId">Back to List</a>
    </form>
</div>
